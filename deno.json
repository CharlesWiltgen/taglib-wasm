{
  "name": "@charleswiltgen/taglib-wasm",
  "version": "0.2.2",
  "description": "TagLib compiled to WebAssembly with TypeScript bindings for universal audio metadata handling",
  "license": "MIT",
  "exports": {
    ".": "./mod.ts"
  },
  "publish": {
    "include": [
      "mod.ts",
      "src/taglib-jsr.ts",
      "src/wasm-jsr.ts",
      "src/types.ts",
      "build/taglib.wasm",
      "README.md",
      "LICENSE",
      "lib/taglib/COPYING.LGPL",
      "lib/taglib/COPYING.MPL"
    ]
  },
  "tasks": {
    "build:wasm": "./build/build-wasm.sh",
    "build:ts": "deno run --allow-read --allow-write --allow-run --allow-env npm:typescript/tsc",
    "build": "deno task build:wasm && deno task build:ts",
    "test": "deno test --allow-read --allow-write --allow-run tests/",
    "test:watch": "deno test --watch --allow-read --allow-write --allow-run tests/",
    "test:systematic": "deno run --allow-read tests/test-systematic.ts",
    "dev": "deno run --watch --allow-read --allow-write mod.ts",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "check": "deno check mod.ts",
    "update-taglib": "./scripts/update-taglib.sh"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "@std/path": "jsr:@std/path@^1.0.0",
    "@std/fs": "jsr:@std/fs@^1.0.0"
  },
  "exclude": [
    "node_modules/",
    "dist/",
    "lib/",
    "build/build-wasm.sh",
    "build/taglib.js",
    "examples/node/"
  ],
  "compilerOptions": {
    "lib": ["ES2022", "DOM", "deno.ns"],
    "strict": true,
    "exactOptionalPropertyTypes": false,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true,
    "noPropertyAccessFromIndexSignature": true
  },
  "permissions": {
    "read": true,
    "write": true,
    "run": true,
    "env": true
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  }
}
